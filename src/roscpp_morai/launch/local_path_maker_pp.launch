<launch>
  <!-- ====== 설정값 (필요시 바꿔 사용) ====== -->
  <!-- 앞으로 자를 로컬 경로 길이 [m] -->
  <arg name="forward_len_m" default="3.0"/>

  <!-- 토픽 이름들 (필요하면 다른 이름으로 remap 가능) -->
  <arg name="global_path_topic" default="/global_path"/>
  <arg name="ego_topic"         default="/Ego_topic"/>
  <arg name="local_path_topic"  default="/local_path"/>

  <!-- ====== 노드 ====== -->
  <node pkg="roscpp_morai" type="local_path_maker" name="local_path_maker" output="screen">
    <!-- 파라미터 -->
    <param name="forward_len_m" value="$(arg forward_len_m)"/>

    <!-- 토픽 리매핑(필요 시만 바꾸세요) -->
    <remap from="/global_path" to="$(arg global_path_topic)"/>
    <remap from="/Ego_topic"   to="$(arg ego_topic)"/>
    <remap from="/local_path"  to="$(arg local_path_topic)"/>
  </node>
</launch>
